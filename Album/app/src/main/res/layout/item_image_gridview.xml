<?xml version="1.0" encoding="utf-8"?>
<com.bluberry.album.view.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_item_iv"
        android:scaleType="center"
        android:src="@drawable/default_image"
        />

    <View
        android:id="@+id/image_item_mask"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mask_shape"
        ></View>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_item_check_box"
        android:layout_gravity="top|right"
        android:background="@drawable/check_box_selector"

        />


</com.bluberry.album.view.SquareView>